        <alert>
            <name>rpm warning</name>
            <type>avionics</type>
            <mode>once</mode>
            <path>Sounds/beep.wav</path>
            <condition>
                <less-than>
                    <property>rotors/main/rpm</property>
                    <value>500</value>
                </less-than>
            </condition>
            <max-dist>4</max-dist>
            <reference-dist>2</reference-dist>
            <volume>
                <factor>1</factor>
            </volume>
            <position>
                <x>0</x>
                <y>0</y>
                <z>-1.5</z>
            </position>
        </alert>
